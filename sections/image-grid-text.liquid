{% comment %}
  Image Grid with Text Section
{% endcomment %}

<section class="image-grid-text-section py-20" data-section-id="{{ section.id }}">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    {% if section.settings.heading != blank %}
      <div class="text-center mb-12">
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="section-description text-gray-600 dark:text-gray-400 mt-4">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for block in section.blocks %}
        <div class="image-text-item text-center" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <div class="mb-6 overflow-hidden rounded-lg">
              <img 
                src="{{ block.settings.image | img_url: 'medium' }}" 
                alt="{{ block.settings.image.alt | default: block.settings.title }}"
                class="w-full h-64 object-cover hover:scale-105 transition-transform duration-300"
                loading="lazy"
              >
            </div>
          {% else %}
            <div class="w-full h-64 bg-gray-200 dark:bg-gray-700 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
          {% endif %}
          
          {% if block.settings.title != blank %}
            <h3 class="text-xl mb-3">{{ block.settings.title }}</h3>
          {% endif %}
          
          {% if block.settings.text != blank %}
            <p class="text-gray-600 dark:text-gray-400 mb-4">{{ block.settings.text }}</p>
          {% endif %}
          
          {% if block.settings.link_text != blank %}
            <a href="{{ block.settings.link }}" class="text-red-500 hover:text-red-600 transition-colors">
              {{ block.settings.link_text }} →
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Image Grid with Text",
  "tag": "section",
  "class": "image-grid-text",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "¿Por qué elegirnos?"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Grid Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Calidad Premium"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Materiales de la más alta calidad seleccionados cuidadosamente."
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text",
          "default": "Leer más"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Grid with Text",
      "blocks": [
        {
          "type": "item",
          "settings": {
            "title": "Calidad Premium",
            "text": "Materiales de la más alta calidad seleccionados cuidadosamente."
          }
        },
        {
          "type": "item",
          "settings": {
            "title": "Diseño Único",
            "text": "Diseños exclusivos que no encontrarás en ningún otro lugar."
          }
        },
        {
          "type": "item",
          "settings": {
            "title": "Envío Rápido",
            "text": "Envíos express disponibles para entrega en 24-48 horas."
          }
        }
      ]
    }
  ]
}
{% endschema %}
