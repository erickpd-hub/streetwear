{% comment %}
  Hero Banner Section - Full screen hero with overlay
{% endcomment %}

<section 
  id="shopify-section-{{ section.id }}" 
  class="hero-banner relative h-screen w-full overflow-hidden"
  data-section-id="{{ section.id }}"
  data-section-type="hero-banner"
>
  {% comment %} Background Image {% endcomment %}
  <div 
    class="absolute inset-0 bg-cover bg-center bg-no-repeat"
    {% if section.settings.hero_image != blank %}
      style="background-image: url('{{ section.settings.hero_image | img_url: '2048x2048' }}');"
    {% else %}
      style="background-image: url('https://images.unsplash.com/photo-1643387848945-da63360662f4?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&q=80&w=1080');"
    {% endif %}
  >
    {% comment %} Overlay {% endcomment %}
    <div 
      class="absolute inset-0"
      style="background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
    ></div>
  </div>

  {% comment %} Content {% endcomment %}
  <div class="relative z-10 h-full flex items-center justify-center">
    <div class="text-center px-4 sm:px-6 lg:px-8">
      
      {% if section.settings.subheading != blank %}
        <h2 
          class="text-white mb-4 tracking-wider animate-fade-in"
          style="color: {{ section.settings.text_color }};"
        >
          {{ section.settings.subheading }}
        </h2>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h1 
          class="text-white mb-6 animate-fade-in-up"
          style="color: {{ section.settings.text_color }};"
        >
          {{ section.settings.heading | newline_to_br }}
        </h1>
      {% endif %}

      {% if section.settings.text != blank %}
        <p 
          class="text-white/90 mb-8 max-w-2xl mx-auto animate-fade-in-up"
          style="color: {{ section.settings.text_color }}; opacity: 0.9;"
        >
          {{ section.settings.text }}
        </p>
      {% endif %}

      {% comment %} Buttons {% endcomment %}
      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in-up">
        {% if section.settings.button_label_1 != blank %}
          <a 
            href="{{ section.settings.button_link_1 }}" 
            class="btn-primary bg-red-500 hover:bg-red-600 text-white px-8 py-3 rounded-lg transition-colors inline-block"
            style="background-color: {{ section.settings.button_color_1 }};"
          >
            {{ section.settings.button_label_1 }}
          </a>
        {% endif %}

        {% if section.settings.button_label_2 != blank %}
          <a 
            href="{{ section.settings.button_link_2 }}" 
            class="btn-secondary border-2 border-white text-white hover:bg-white hover:text-black px-8 py-3 rounded-lg transition-colors inline-block"
            style="border-color: {{ section.settings.button_color_2 }}; color: {{ section.settings.button_color_2 }};"
          >
            {{ section.settings.button_label_2 }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  {% comment %} Scroll Indicator {% endcomment %}
  {% if section.settings.show_scroll_indicator %}
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <div class="w-6 h-10 border-2 border-white rounded-full flex items-start justify-center p-2">
        <div class="w-1 h-3 bg-white rounded-full"></div>
      </div>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 40
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "COLECCIÓN 2025"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "URBAN\nSTYLE"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Descubre la nueva colección de ropa streetwear diseñada para los que marcan tendencia en las calles"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Primary Button"
    },
    {
      "type": "text",
      "id": "button_label_1",
      "label": "Button Label",
      "default": "Comprar Ahora"
    },
    {
      "type": "url",
      "id": "button_link_1",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_color_1",
      "label": "Button Color",
      "default": "#ef4444"
    },
    {
      "type": "header",
      "content": "Secondary Button"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Button Label",
      "default": "Ver Colección"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_color_2",
      "label": "Button Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Settings"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show Scroll Indicator",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
