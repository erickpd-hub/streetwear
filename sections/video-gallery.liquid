{% comment %}
  Video Gallery Section
{% endcomment %}

<section class="video-gallery-section py-20" data-section-id="{{ section.id }}">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    {% if section.settings.heading != blank %}
      <div class="text-center mb-12">
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="section-description text-gray-600 dark:text-gray-400 mt-4">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    <div class="grid grid-cols-1 md:grid-cols-{{ section.settings.columns }} gap-8">
      {% for block in section.blocks %}
        <div class="video-item" {{ block.shopify_attributes }}>
          {% if block.settings.video_url != blank %}
            <div class="video-wrapper relative rounded-lg overflow-hidden bg-black aspect-video">
              {% assign video_id = block.settings.video_url | split: 'v=' | last | split: '&' | first %}
              {% if block.settings.video_url contains 'youtube' %}
                <iframe 
                  src="https://www.youtube.com/embed/{{ video_id }}" 
                  class="w-full h-full"
                  frameborder="0" 
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                  allowfullscreen
                  loading="lazy"
                ></iframe>
              {% elsif block.settings.video_url contains 'vimeo' %}
                {% assign vimeo_id = block.settings.video_url | split: '/' | last %}
                <iframe 
                  src="https://player.vimeo.com/video/{{ vimeo_id }}" 
                  class="w-full h-full"
                  frameborder="0" 
                  allow="autoplay; fullscreen; picture-in-picture" 
                  allowfullscreen
                  loading="lazy"
                ></iframe>
              {% endif %}
            </div>
          {% else %}
            <div class="video-placeholder aspect-video bg-gray-200 dark:bg-gray-700 rounded-lg flex items-center justify-center">
              <svg class="w-20 h-20 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          {% endif %}
          
          {% if block.settings.title != blank or block.settings.description != blank %}
            <div class="mt-4">
              {% if block.settings.title != blank %}
                <h3 class="text-lg mb-2">{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.description != blank %}
                <p class="text-gray-600 dark:text-gray-400 text-sm">{{ block.settings.description }}</p>
              {% endif %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Video Gallery",
  "tag": "section",
  "class": "video-gallery",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Videos"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 1,
      "max": 3,
      "step": 1,
      "label": "Videos per row",
      "default": 2
    }
  ],
  "blocks": [
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "text",
          "id": "video_url",
          "label": "Video URL",
          "info": "YouTube or Vimeo URL",
          "default": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video Gallery",
      "blocks": [
        {
          "type": "video"
        },
        {
          "type": "video"
        }
      ]
    }
  ]
}
{% endschema %}
