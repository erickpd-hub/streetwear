{% comment %}
  Logo Carousel Section - Moving right to left
{% endcomment %}

<section class="logo-carousel-section py-20" data-section-id="{{ section.id }}">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    {% if section.settings.heading != blank %}
      <div class="text-center mb-12">
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}

    <div class="logo-carousel-wrapper overflow-hidden">
      <div class="logo-carousel-track">
        {% for block in section.blocks %}
          <div class="logo-carousel-item" {{ block.shopify_attributes }}>
            {% if block.settings.logo != blank %}
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" target="_blank" rel="noopener" class="block">
                  <img 
                    src="{{ block.settings.logo | img_url: 'medium' }}" 
                    alt="{{ block.settings.logo.alt | default: 'Logo' }}"
                    class="logo-image"
                    loading="lazy"
                  >
                </a>
              {% else %}
                <img 
                  src="{{ block.settings.logo | img_url: 'medium' }}" 
                  alt="{{ block.settings.logo.alt | default: 'Logo' }}"
                  class="logo-image"
                  loading="lazy"
                >
              {% endif %}
            {% else %}
              <div class="logo-placeholder">
                <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            {% endif %}
          </div>
        {% endfor %}
        
        {% comment %} Duplicate for seamless loop {% endcomment %}
        {% for block in section.blocks %}
          <div class="logo-carousel-item">
            {% if block.settings.logo != blank %}
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" target="_blank" rel="noopener" class="block">
                  <img 
                    src="{{ block.settings.logo | img_url: 'medium' }}" 
                    alt="{{ block.settings.logo.alt | default: 'Logo' }}"
                    class="logo-image"
                    loading="lazy"
                  >
                </a>
              {% else %}
                <img 
                  src="{{ block.settings.logo | img_url: 'medium' }}" 
                  alt="{{ block.settings.logo.alt | default: 'Logo' }}"
                  class="logo-image"
                  loading="lazy"
                >
              {% endif %}
            {% else %}
              <div class="logo-placeholder">
                <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>

  </div>
</section>

<style>
  .logo-carousel-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .logo-carousel-track {
    display: inline-flex;
    gap: 4rem;
    animation: scroll-rtl {{ section.settings.speed }}s linear infinite;
    white-space: nowrap;
  }

  .logo-carousel-item {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    width: 150px;
    height: 80px;
  }

  .logo-image {
    max-width: 150px;
    max-height: 80px;
    width: auto;
    height: auto;
    object-fit: contain;
    filter: grayscale(100%);
    opacity: 0.6;
    transition: all 0.3s ease;
  }

  .logo-image:hover {
    filter: grayscale(0%);
    opacity: 1;
  }

  .dark .logo-image {
    filter: grayscale(100%) invert(1);
  }

  .dark .logo-image:hover {
    filter: invert(1);
  }

  .logo-placeholder {
    width: 100%;
    height: 100%;
    background-color: rgb(243, 244, 246);
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .dark .logo-placeholder {
    background-color: rgb(55, 65, 81);
  }

  @keyframes scroll-rtl {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .logo-carousel-wrapper:hover .logo-carousel-track {
    animation-play-state: paused;
  }
</style>

